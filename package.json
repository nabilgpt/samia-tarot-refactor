{
  "name": "samia-tarot-monorepo",
  "version": "1.0.0",
  "description": "SAMIA TAROT - Monorepo with 5 PWAs",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "libs/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:client": "turbo run dev --filter=client",
    "dev:reader": "turbo run dev --filter=reader",
    "dev:monitor": "turbo run dev --filter=monitor",
    "dev:admin": "turbo run dev --filter=admin",
    "dev:superadmin": "turbo run dev --filter=superadmin",
    "build": "turbo run build",
    "build:client": "turbo run build --filter=client",
    "build:reader": "turbo run build --filter=reader",
    "build:monitor": "turbo run build --filter=monitor",
    "build:admin": "turbo run build --filter=admin",
    "build:superadmin": "turbo run build --filter=superadmin",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "migration:up": "cd sql && psql $DATABASE_URL -f M011_wallet_payouts.sql -f M012_rewards.sql -f M013_i18n_translations.sql -f M015_auth_profiles.sql -f M016_auth_verifications.sql -f M017_auth_mfa.sql -f M018_daily_zodiac.sql -f M019_rls_policies.sql",
    "supabase:functions:deploy": "supabase functions deploy --no-verify-jwt",
    "mobile:build:client": "cd apps/client && npm run build && npx cap sync",
    "mobile:build:backoffice": "cd apps/reader && npm run build && npx cap sync"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.33",
    "prettier": "^3.2.4",
    "tailwindcss": "^3.4.1",
    "turbo": "^1.12.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.11"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "packageManager": "npm@10.2.4"
}